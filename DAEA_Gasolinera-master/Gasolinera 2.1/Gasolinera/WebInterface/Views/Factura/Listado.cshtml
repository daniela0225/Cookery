@model List<Entities.CFactura>
@{
    ViewBag.Title = "Listado";
    var grid = new WebGrid(source: Model);
}
<div class="panel-info widget-shadow">
    <h2>Listado de Facturas</h2>
    <br />
    @Html.ActionLink("Crear", "Formulario", "Factura", new { codigo = 0 }, null)
    <br />
    @grid.GetHtml(tableStyle: "table table-striped",
    columns: grid.Columns(
        grid.Column(columnName: "venta", header: "Venta"),
        grid.Column(columnName: "raz_soc", header: "Razón Social"),
        grid.Column(columnName: "ruc", header: "RUC"),
        grid.Column(columnName: "pretotal", header: "Pre-Total"),
        grid.Column(columnName: "igv", header: "IGV"),
        grid.Column(columnName: "total", header: "Total"),
        grid.Column(
            header: "Acciones",
            format: (item) => Html.ActionLink("Editar","Formulario", "Factura", new { codigo = item.codigo }, null)
        ),
        grid.Column(
            header: "",
            format: (item) => Html.ActionLink("Eliminar", "Eliminar", "Factura", new { codigo = item.codigo }, null)
        )
       )
      )
</div>