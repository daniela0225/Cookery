@model List<Entities.CCliente>
@{
    ViewBag.Title = "Listado";
    var grid = new WebGrid(source: Model);
}
<div class="panel-info widget-shadow">
    <h2>Listado de Clientes</h2>
    <br />

    <h2>@Html.ActionLink("Crear", "Formulario", "Cliente", new { codigo = 0 }, null)</h2>
    <br />
    @grid.GetHtml(tableStyle: "table table-striped",
    columns: grid.Columns(
          grid.Column(columnName: "codigo", header: "Código"),
          grid.Column(columnName: "tipo_doc", header: "Tipo de Doc."),
          grid.Column(columnName: "documento", header: "Documento"),
          grid.Column(columnName: "nom_ape", header: "Nombres y Apellidos"),
          grid.Column(columnName: "direccion", header: "Dirección"),
          grid.Column(
              header: "Acciones",
              format:(item) => Html.ActionLink("Editar", "Formulario", "Cliente", new { codigo = item.codigo }, null)
          ),
          grid.Column(
              header: "",
              format: (item) => Html.ActionLink("Eliminar", "Eliminar", "Cliente", new { codigo = item.codigo }, null)
          )
        )
    )
</div>